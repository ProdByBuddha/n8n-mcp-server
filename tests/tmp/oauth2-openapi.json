{
  "openapi": "3.0.0",
  "info": {
    "title": "OAuth2 Test API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3002"
    }
  ],
  "components": {
    "securitySchemes": {
      "oauth2": {
        "type": "oauth2",
        "flows": {
          "clientCredentials": {
            "tokenUrl": "http://localhost:3002/token",
            "scopes": {}
          }
        }
      }
    }
  },
  "paths": {
    "/widgets": {
      "get": {
        "summary": "Get widgets",
        "operationId": "getWidgets",
        "security": [
          {
            "oauth2": []
          }
        ],
        "responses": {
          "200": {
            "description": "A list of widgets",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
