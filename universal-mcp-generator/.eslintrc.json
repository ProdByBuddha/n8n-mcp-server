{
  "env": { "es2021": true, "node": true, "jest": true },
  "extends": ["eslint:recommended", "plugin:n/recommended", "plugin:promise/recommended", "plugin:import/recommended", "plugin:import/node", "prettier"],
  "parserOptions": { "ecmaVersion": 2021 },
