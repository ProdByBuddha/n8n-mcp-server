# n8n API access (used by server, CLI, and E2E tests)
N8N_API_URL=https://n8n.example.com/api/v1
N8N_API_KEY=

# Optional alternative auth methods
# N8N_BEARER_TOKEN=
# N8N_BASIC_AUTH_USER=
# N8N_BASIC_AUTH_PASS=

# Hardening (optional)
# N8N_MCP_ALLOWED_METHODS=GET,POST
# N8N_MCP_ALLOWED_PATHS=/workflows*,/executions*
# N8N_MCP_RATE_LIMIT=120
# N8N_MCP_RATE_WINDOW_MS=60000
# N8N_MCP_LOG_FILE=./logs/mcp-n8n.log

# OpenAPI tool generation (optional)
# Provide either a local file path or a URL to an OpenAPI 3.x JSON spec.
# On startup, the MCP server will generate tools dynamically using the bundled
# universal-openapi-mcp-generator.
# OPENAPI_SPEC_FILE=./path/to/openapi.json
# OPENAPI_SPEC_URL=https://api.example.com/openapi.json
# Override the base URL used by generated tools (else uses spec servers[0].url):
# OPENAPI_BASE_URL=https://api.example.com/v1
